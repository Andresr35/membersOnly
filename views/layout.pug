doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav 
      if user 
        h2 
          a(href="/") Welcome to Member Chat #{user.firstName}!
      else
        h2 
        a(href="/") Welcome to Member Chat   
      ul 
        if user
          li 
            a(href=user.url) Profile
          li
            a(href="/users/member") Members
          li
            a(href="/users/admin") Admin
          li 
            a(href="/logout") Logout

        else 
          li
            a(href="/login") Log in
        
    block content
